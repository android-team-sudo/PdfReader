<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_tutorial_1">



    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/font_calibri_bold"
        android:textColor="@color/mb_white"
        android:text="@string/tutorial_excel_to_pdf"
        android:textSize="@dimen/_22ssp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/font_calibri_regular"
        android:textColor="@color/mb_white"
        android:textSize="@dimen/_12ssp"
        android:text="@string/tutorial_1_convert_excel_files_into_pdf_in_just_one_click"
        android:textAlignment="center" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_tutorial_2"
        android:layout_below="@id/tv_desc"/>
</RelativeLayout>